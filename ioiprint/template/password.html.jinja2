<html>
<head>
    <link rel="stylesheet" href="{{ static_path }}/fonts/fonts.css">
    <link rel="stylesheet" href="{{ static_path }}/style.css">
    <meta charset="UTF-8">
</head>
<body id="password">
{% for user in users %}
    <div class="page bg-topright" style="background-image: url({{ static_path }}/logo.png)">
        <h1>{{ title }}</h1>

        <dl>
            <dt>Name:</dt>
            <dd>{{ user.name }}</dd>
            <dt>Username:</dt>
            <dd><kbd>{{ user.login }}</kbd></dd>
            <dt>Password:</dt>
            <dd><kbd>{{ user.password }}</kbd></dd>
        </dl>

        <p>Note that the username and the password are both case-sensitive.</p>
    </div>
{% endfor %}
</body>
</html>
